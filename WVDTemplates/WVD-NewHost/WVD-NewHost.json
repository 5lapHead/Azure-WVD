{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Prefix": {
      "type": "string",
      "defaultValue": "wvd"
    },
    "AdminUserName": {
      "type": "string"
    },
    "AdminPassword": {
      "type": "securestring"
    },
    "DomainFQDN": {
      "type": "string"
    },
    "Instance": {
      "type": "int",
      "minValue": 1,
      "maxValue": 99,
      "defaultValue": 1
    },
    "OperatingSystem": {
      "type": "string",
      "defaultValue": "Client",
      "allowedValues": [
        "Server",
        "Client"
      ]
    },
    "VMSize": {
      "type": "string",
      "defaultValue": "Small",
      "allowedValues": [
        "Small",
        "Medium",
        "Large"
      ]
    },
    "ProfilePath": {
      "type": "string"
    },
    "RegistrationToken": {
      "type": "string"
    },
    "virtualNetworkId": {
      "type": "string"
    },
    "subnetName": {
      "type": "string"
    },
    "autoShutdownTime": {
      "type": "string"
    },
    "autoShutdownTimeZone": {
      "type": "string"
    }
  },
  "variables": {
    "VM_Images": {
      "Server": {
        "publisher": "MicrosoftWindowsServer",
        "offer": "WindowsServer",
        "sku": "2019-Datacenter-smalldisk",
        "version": "latest"
      },
      "Client": {
        "publisher": "microsoftwindowsdesktop",
        "offer": "office-365",
        "sku": "1903-evd-o365pp",
        "version": "latest"
      }
    },
    "VM_SIZES": {
      "Small": {
        "WVDsize": "Standard_B2ms"
      },
      "Medium": {
        "WVDsize": "Standard_DS3_v2"
      },
      "Large": {
        "WVDsize": "Standard_DS14_v2"
      }
    },
    "fileUris": "https://raw.githubusercontent.com/DeanCefola/Azure-WVD/master/PowerShell/New-WVDSessionHost.ps1",
    "VMName": "[concat(parameters('Prefix'),'-VM-')]",
    "vnetId": "[parameters('virtualNetworkId')]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "JoinUser": "[concat(parameters('adminUsername'),'@',parameters('DomainFQDN'))]",
    "arguments": "[concat('-ProfilePath', parameters('ProfilePath'), 'RegistrationToken', parameters('RegistrationToken'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[concat(parameters('Prefix'),'-AVSet')]",
      "apiVersion": "2018-02-01-preview",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "WVD-AVSet"
      },
      "copy": {
        "name": "AVSet-Copy",
        "count": 1
      },
      "sku": {
        "name": "Aligned"
      },
      "properties": {
        "platformUpdateDomainCount": 5,
        "platformFaultDomainCount": 2
      },
      "dependsOn": [

      ]
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(variables('VMName'),copyIndex(),'-nic')]",
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "WVDNic-Copy",
        "count": "[parameters('Instance')]"
      },
      "tags": {
        "costcode": "AA-Money",
        "displayName": "WVD-Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ]
      },
      "dependsOn": [
        "AVSet-Copy"
      ]

    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(variables('VMName'),copyIndex())]",
      "apiVersion": "2019-03-01",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "WVD-Copy",
        "count": "[parameters('Instance')]"
      },
      "tags": {
        "costcode": "AA-Money",
        "displayName": "WVD-VM"
      },
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', concat(parameters('Prefix'),'-AVSet'))]"
        },
        "hardwareProfile": {
          "vmSize": "[variables('VM_SIZES')[parameters('VMSize')].WVDsize]"
        },
          "storageProfile": {
            "osDisk": {
              "createOption": "FromImage",
              "managedDisk": {
                "storageAccountType": "StandardSSD_LRS"
              }
            },
            "imageReference": {
              "publisher": "[variables('VM_IMAGES').publisher]",
              "offer": "[variables('VM_Images').offer]",
              "sku": "[variables('VM_Images').sku]",
              "version": "[variables('VM_Images').version]"
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('VMName'),copyIndex(),'-nic'))]"
              }
            ]
          },
          "osProfile": {
            "computerName": "[concat(variables('VMName'),copyIndex())]",
            "adminUsername": "[parameters('AdminUserName')]",
            "adminPassword": "[parameters('AdminPassword')]",
            "windowsConfiguration": {
              "enableAutomaticUpdates": true,
              "provisionVmAgent": true
            }
          }
        },
        "dependsOn": [
          "WVDNic-Copy"
        ]
      },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('VMName'),copyIndex(), '/joinDomain')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "JoinDomain-Copy",
        "count": "[parameters('Instance')]"
      },
      "tags": {
        "displayName": "Join Domain"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('DomainFQDN')]",
          "User": "[variables('JoinUser')]",
          "Restart": "true",
          "Options": "3"
        },
        "protectedSettings": {
          "Password": "[parameters('adminPassword')]"
        }
      },
      "dependsOn": [
        "WVD-Copy"
      ]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[concat(variables('VMName'),copyIndex(),'-Microsoft.CustomScriptExtension')]",
      "apiVersion": "2015-01-01",
      "copy": {
        "name": "Script-Copy",
        "count": "[parameters('Instance')]"
      },
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "https://gallery.azure.com/artifact/20161101/Microsoft.CustomScriptExtension-arm.2.0.56/Artifacts/MainTemplate.json"
        },
        "parameters": {
          "vmName": {
            "value": "[concat(variables('VMName'),copyIndex())]"
          },
          "location": {
            "value": "[resourceGroup().location]"
          },
          "fileUris": {
            "value": "[variables('fileUris')]"
          },
          "arguments": {
            "value": "[variables('arguments')]"
          }
        }
      },
      "dependsOn": [
        "JoinDomain-Copy"
      ]
    },
    {
      "name": "[concat('shutdown-computevm-', concat(variables('VMName'),copyIndex()))]",
      "type": "Microsoft.DevTestLab/schedules",
      "apiVersion": "2017-04-26-preview",
      "location": "[resourceGroup().location]",
      "tags": {
        "costcode": "AA-Money",
        "displayName": "Shutdown"
      },
      "copy": {
        "name": "Shutdown-Copy",
        "count": "[parameters('Instance')]"
      },
      "properties": {
        "status": "enabled",
        "taskType": "ComputeVmShutdownTask",
        "dailyRecurrence": {
          "time": "[parameters('autoShutdownTime')]"
        },
        "timeZoneId": "[parameters('autoShutdownTimeZone')]",
        "targetResourceId": "[resourceId('Microsoft.Compute/virtualMachines', concat(variables('VMName'),copyIndex()))]",
        "notificationSettings": {
          "status": "Disabled",
          "notificationLocale": "en",
          "timeInMinutes": "30"
        }
      },
      "dependsOn": [
        "Script-Copy"
      ]
    }
  ],
  "outputs": {
    
  }
}