{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Prefix": {
      "type": "string",
      "defaultValue": "wvd"
    },    
    "Instance": {
      "type": "int",
      "minValue": 1,
      "maxValue": 99,
      "defaultValue": 1
    },    
    "ProfilePath": {
      "type": "string"
    },
    "RegistrationToken": {
      "type": "string"
    }
   
  },
  "variables": {
    "fileUris": "https://raw.githubusercontent.com/DeanCefola/Azure-WVD/master/PowerShell/New-WVDSessionHost.ps1",
    "VMName": "[concat('/subscriptions/25603d65-4ffd-4496-815d-417e73e71da3/resourceGroups/AA-WVD-Application-rg/providers/Microsoft.Compute/virtualMachines/vdi-VM-')]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('VMName'),copyIndex(),'/CustomScriptExtension')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "Script-Copy",
        "count": "[parameters('Instance')]"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.8",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[variables('fileUris')]"
          ]
        },
        "protectedSettings": {
          "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File', 'New-WVDSessionHost.ps1', '-ProfilePath', parameters('ProfilePath'),'-RegistrationToken', parameters('RegistrationToken'))]"
        }
      },
      "dependsOn": [
        
      ]
    }
  ],
  "outputs": {
    
  }
}