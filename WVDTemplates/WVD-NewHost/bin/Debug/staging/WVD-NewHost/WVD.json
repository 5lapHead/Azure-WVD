{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "Auto-generated container in staging storage account to receive post-build staging folder upload"
      }
      //"defaultValue": "https://raw.githubusercontent.com/DeanCefola/WebDemo/master/5.-EndState"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "Auto-generated token to access _artifactsLocation"
      }
      //"defaultValue": " "
    },
    "Prefix": {
      "type": "string",
      "defaultValue": "z99"
    },
    "AdminPassword": {
      "type": "securestring"
    },
    "AdminUserName": {
      "type": "string"
    },
    "DomainFQDN": {
      "type": "string"
    },
    "Instance": {
      "type": "int",
      "minValue": 1,
      "maxValue": 4,
      "defaultValue": 1
    },    
    "OperatingSystem": {
      "type": "string",
      "defaultValue": "Windows Server 2019",
      "allowedValues": [
        "Windows Server 2019",
        "Windows 10 Client Multi-User"
      ]
    },
    "VMSize": {
      "type": "string",
      "defaultValue": "Small",
      "allowedValues": [
        "Small",
        "Medium",
        "Large"
      ]
    }    
  },
  "variables": {
    "VM_Images": {
      "Windows Server 2019": {
        "OperatingSystem": "WindowsServer",
        "publisher": "MicrosoftWindowsServer",
        "offer": "WindowsServer",
        "sku": "2019-Datacenter-smalldisk",
        "version": "latest"
      },
      "Windows 10 Client Multi-User": {
        "OperatingSystem": "WindowsClient",
        "publisher": "microsoftwindowsdesktop",
        "offer": "office-365",
        "sku": "1903-evd-o365pp",
        "version": "latest"
      }

    },
    "VM_SIZES": {
      "Small": {
        "WVDsize": "Standard_B2ms"
      },
      "Medium": {
        "WVDsize": "Standard_DS3_v2"
      },
      "Large": {
        "WVDsize": "Standard_DS14_v2"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "WVD-AVSet",
      "apiVersion": "2016-04-30-preview",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "AVSet-Copy",
        "count": 1
      },
      "tags": {
        "displayName": "Availability Set"
      },
      "sku": {
        "name": "Aligned"
      },
      "properties": {
        "platformUpdateDomainCount": 5,
        "platformFaultDomainCount": 2
      },
      "dependsOn": [

      ]
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('Prefix'),'-WVDVM',copyIndex(),'-nic')]",
      "apiVersion": "2018-04-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "WVD Nics"
      },
      "copy": {
        "name": "WVDNic-Copy",
        "count": "[parameters('Instance')]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[parameters('Subnet')]"
              },              
              "privateIPAllocationMethod": "Dynamic"
            }
          }
        ]
      },
      "dependsOn": [

      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('Prefix'),'-WVDVM',copyIndex())]",
      "apiVersion": "2018-04-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "WVD Servers"
      },
      "copy": {
        "name": "WVDVM-Copy",
        "count": "[parameters('Instance')]"
      },
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', concat(parameters('Prefix'),'-AVSetDB'))]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('https://', 'azureacademydiag597', '.blob.core.windows.net/')]"
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('VM_SIZES')]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('Prefix'),'-WVDVM',copyIndex())]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('VM_IMAGES').publisher]",
            "offer": "[parameters('VM_Images').offer]",
            "sku": "[parameters('VM_Images').sku]",
            "version": "[parameters('VM_Images').version]"
          },
          "osDisk": {
            "name": "[concat(parameters('Prefix'),'-WVDVM',copyIndex(),'-OSDisk')]",
            "createOption": "fromImage",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            }
          },
          "dataDisks": [

          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('Prefix'),'-WVDVM',copyIndex(),'-nic'))]"
            }
          ]
        }
      },
      "dependsOn": [
        "WVDNic-Copy",
        "AVSet-Copy"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('DFSInfo')[copyIndex()].VMName, '/joinDomain')]",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "copy": {
        "name": "JoinDomainCopy",
        "count": "[length(variables('DFSInfo'))]"
      },
      "tags": {
        "displayName": "Join Domain"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('DomainFQDN')]",
          "User": "[parameters('JoinUser')]",
          "Restart": "true",
          "Options": "3"
        },
        "protectedSettings": {
          "Password": "[parameters('Admin_Password')]"
        }
      },
      "dependsOn": [
        "DFSCopy"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('Prefix'),'-WVDVm',copyIndex(),'/CustomScriptExtension')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.7",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": "[split(variables('fileUris'), ' ')]"
        },
        "protectedSettings": {
          "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File ', variables('firstFileName'), ' ', variables('arguments'))]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines',concat(parameters('Prefix'),'-WebVM',copyIndex()))]"
      ]
    }


  ],
  "outputs": {

  }
}
